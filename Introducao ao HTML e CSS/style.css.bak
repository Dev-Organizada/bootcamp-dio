body {
	background: #E6E6E6;
	font-family: arial;
	max-width: 900px;
	margin: auto;
}

#title, .subtitle, .post_title {
	color: #8A4B08;
}

#title {
	font-size: 40px;
	text-transform: uppercase;
}

a {
	text-decoration: line-height;
	color: #000;
}

.post_title {
	font-size: 16px;
	font-style: italic;
	margin: 0;
	margin-bottom: 15px;
}

.post {
	background: #fff;
	padding: 15px;
	border: 3px solid #DBA901;
	margin: 10px;
	margin-bottom: 15px;
	border-radius: 5px;
}

.post_content {
	margin: 0;
	margin-bottom: 15px;
}

.post_img{
	margin-bottom: 15px;
	border-radius: 50%;
	border: 1px solid #DBA901;
	width: 30%;
}

.contacts_list {
	list-style-type: square;
	padding-left: 15px;
}